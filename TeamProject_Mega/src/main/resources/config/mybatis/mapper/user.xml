<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="u">

	<!-- 회원가입 -->
	<insert id = "user_insert" parameterType="user">
		insert into USER_INFO values(
				SEQ_USER_INFO.nextVal,
				#{user_id},
				#{user_pwd},
				sysdate,
				#{user_nickname},
				#{user_image_path},
				#{user_email}
		)
		
	</insert>

	<!-- 전체목록 조회 -->
	<select id = "user_list" resultType = "User" parameterType = "int">
		select * from USER_INFO where idx = #{idx}
	</select>
	
	<!-- 회원 탈퇴 -->
	<delete id = "user_id" parameterType="int">
		alter table USER_INFO drop 
	</delete>
	
	<!-- 아이디 찾기 -->
	<select id = "user_id" resultType="User" parameterType="int">
		select user_id form USER_INFO where name=#{name} and <!-- 아이디 찾기 이름 + 주민번호 or 이름 + 이메일 -->
	</select>
	
	<!-- 비밀번호 찾기 -->
	<select id = "user_pw" resultType="User" parameterType="int">
		select user_pw form USER_INFO where name=#{name} and id=#{id} <!-- 비밀번호 찾기 이름 + 아이디 + 주민번호 or 이메일 -->
	</select>
	
</mapper>












